                <ul class="treeview-menu">
                    <li>
                        <a href="@Url.Action("Index", "DepartmentResponsible")" role="button">
                            <i class="fa fa-list"></i> <span>@DocumentsExplorerResources.TreeNodeDepartmentResponsibles</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-building"></i> <span>@DocumentsExplorerResources.TreeNodeCompanies</span>
                    <span class="pull-right-container">
